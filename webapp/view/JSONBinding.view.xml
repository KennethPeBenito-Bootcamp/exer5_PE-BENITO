<mvc:View controllerName="sapips.training.jsonbinding.controller.JSONBinding"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
    <content>
    <Panel id="panel1" headerText="Data Binding Basics" class="sapUiResponsiveMargin" width="auto" >
         <f:SimpleForm id="idSimpleForm2" editable="true" layout="ResponsiveGridLayout" title="{i18n>detailsLbl}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <Label id="idLblEid" text="{i18n>eidLbl}"/>
                <Input id="idInptEid" value="" enabled="false"/>
                <Label id="idLblEnable" text="{i18n>enableLbl}" />
                <CheckBox id="idChkEnable" text="" selected="false" />
            </f:content>
        </f:SimpleForm>
    </Panel>    

    <Panel id="panel2" headerText="Address Details" class="sapUiResponsiveMargin" width="auto" >
        <f:SimpleForm id="idAddSimpleForm" editable="true" layout="ResponsiveGridLayout" title="{i18n>addressDetailsLbl}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <Label id="idLblAddress" text="Address"/>
                <Text id="inputAddress" text="{/Address/Street} {/Address/ZIP} {/Address/City} {/Address/Country}" class="sapUiSmallMarginBottom" width="100%"/>
                <Link id="label3" text="Send Email" href="{ path: '/EID', formatter:'.formatter.formatMail'}"/>
                <Label id="idLblSalesAmount" text="{i18n>salesAmountLbl}" />
                <Input id="idInputSalesAmount" class="sapUiSmallMarginBegin" enabled="true"  value="{ parts: [ {path: '/SalesAmount'}, {path: '/CurrencyCode'} ], type: 'sap.ui.model.type.Currency', formatOptions: {showMeasure: false} }"/>
            </f:content>
        </f:SimpleForm>
    </Panel>
    <Panel id="panel3" headerText="Aggregation Binding" class="sapUiResponsiveMargin" width="auto" >    
        <List id="idList" items="{/ProductCollection}" headerText="Products">
		 <ObjectListItem id="idAggregationBind" type="Active" number="{ parts: [ {path: 'UnitPrice'}, {path: '/CurrencyCode'} ], type: 'sap.ui.model.type.Currency', formatOptions: { showMeasure: false } }" numberUnit="{/CurrencyCode}">	
            <attributes>
                <ObjectAttribute id="idQuantity" text="QuantityPerUnit" />
            </attributes>
            <attributes>
                <ObjectAttribute id="idStock" text="{ parts: [ {path: 'UnitPrice'}, {path: 'UnitsInStock'}, {path: '/CurrencyCode'} ], formatter: '.formatter.formatStockValue' }" />
            </attributes>
        </ObjectListItem>
	</List>
    </Panel>
    <Panel id="panel4" headerText="Product Details" class="sapUiResponsiveMargin" width="auto" > 
         <f:SimpleForm id="idProdSimpleForm" editable="true" layout="ResponsiveGridLayout" title="{i18n>addressDetailsLbl}" labelSpanXL="3" labelSpanL="3" labelSpanM="3" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false">
            <f:content>
                <Label text="ProductID" id="idLblProd"/>
                <Input width="100%" id="idInptPId" value="ProductID"/>
                <Label text="ProductName" id="idLbl"/>
                <Input width="100%" id="idInptPName" value="ProductName"/>
                <Label text="SupplierID" id="idLblSup"/>
                <Input width="100%" id="idInptSupID" value="SupplierID"/>
                <Label text="CategoryID" id="idLblCat"/>
                <Input width="100%" id="idInptCat" value="CategoryID"/>
                <Label text="QuantityPerUnit" id="idLblQty"/>
                <Input width="100%" id="idInptQty" value="QuantityPerUnit"/>
                <Label text="UnitPrice" id="idLblUnPrice"/>
                <Input width="100%" id="idInptUPrice" value="UnitPrice"/>
                <Label text="UnitsinStock" id="idLblUStock"/>
                <Input width="100%" id="idInptUStock" value="UnitsInStock"/>
                <Label text="UnitsonOrder" id="idLblOrder"/>
                <Input width="100%" id="idInptUOrder" value="UnitsOnOrder"/>
                <Label text="ReorderLevl" id="idLblLvl"/>
                <Input width="100%" id="idInptLvl" value="ReorderLevel"/>
                <Label text="Discontinued" id="idLblDis"/>
                <Input width="100%" id="idInptDis" value="Discontinued"/>
            </f:content>
        </f:SimpleForm>

    </Panel>
    </content>    
    </Page>
</mvc:View>